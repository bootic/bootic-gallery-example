<ul class="list clearfix">
  <% @shops.each do |shop| %>
    <li class="shop">
      <a href="/<%= shop.subdomain %>" class="clip">
        <img src="<%= shop.image.rels[:medium].href %>" />
      </a>
      <h4><%= shop.name %></h4>
      <p class="products_count">
        <a href="/<%= shop.subdomain %>"><%= shop.product_counts.visible %> productos</a> | 
        <a href="<%= shop.rels[:web].href %>" target="_blank"><%= shop.url %></a>
      </p>
    </li>
  <% end %>
</ul>